{
    "compilerOptions": {
        "outDir": "./dist/",
        // Подсвечивает все места где не указан тип
        "noImplicitAny": true,
        "module": "ESNext",
        "target": "es5",
        "jsx": "react-jsx",
        //позволяет не только ts, но и js
        "allowJs": true,
        "moduleResolution": "node",
        /*"baseUrl": ".",*/
        // import вместо require в webpack.config
        "esModuleInterop": true,
        // import без *
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    }
}
